{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "run-s build:clean build:tsc",
    "build:clean": "rimraf packages/*/lib",
    "build:tsc": "tsc -b packages",
    "dev": "tsc -b packages --watch",
    "lint": "run-p lint:prettier lint:tslint:root lint:tslint:packages",
    "lint:prettier": "prettier --check **/*.{ts,md,yml,json}",
    "lint:tslint:packages": "lerna exec --no-bail -- tslint -p .",
    "lint:tslint:root": "tslint -p .",
    "prepublishOnly": "yarn build"
  },
  "prettier": {
    "printWidth": 100,
    "proseWrap": "always",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@ark120202/tslint-config": "^4.0.2",
    "@ark120202/typescript-config": "^2.0.0",
    "@types/fs-extra": "^5.1.0",
    "@types/htmlparser2": "^3.10.0",
    "fs-extra": "^7.0.1",
    "lerna": "^3.13.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "rimraf": "^2.6.3",
    "ts-node": "^8.1.0",
    "tslib": "^1.9.3",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  }
}
