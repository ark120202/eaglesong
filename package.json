{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-s build:clean build:tsc",
    "build:clean": "tsc -b packages --clean",
    "build:tsc": "tsc -b packages",
    "dev": "tsc -b packages --watch",
    "docs": "ts-node scripts/serve-docs.ts",
    "lint": "run-p lint:prettier lint:eslint",
    "lint:eslint": "eslint . --ext .js,.ts",
    "lint:prettier": "prettier --check **/*.{ts,md,yml,json}",
    "prepublishOnly": "yarn build"
  },
  "prettier": {
    "printWidth": 100,
    "proseWrap": "always",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": "@ark120202/eslint-config/node",
    "parserOptions": {
      "project": [
        "tsconfig.json",
        "packages/*/tsconfig.json"
      ]
    }
  },
  "devDependencies": {
    "@ark120202/eslint-config": "^2.2.0",
    "@ark120202/typescript-config": "^2.0.0",
    "@types/fs-extra": "^8.0.1",
    "@types/htmlparser2": "^3.10.1",
    "@types/node": "^12.12.14",
    "eslint": "^6.7.2",
    "fs-extra": "^8.1.0",
    "lerna": "^3.19.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "ts-node": "^8.5.4",
    "tslib": "^1.10.0",
    "typescript": "^3.7.2"
  }
}
