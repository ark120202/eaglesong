{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-s build:clean build:tsc",
    "build:clean": "tsc -b packages --clean",
    "build:tsc": "tsc -b packages",
    "dev": "tsc -b packages --watch",
    "docs": "ts-node-script scripts/serve-docs.ts",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "prepublishOnly": "yarn build"
  },
  "prettier": {
    "printWidth": 100,
    "proseWrap": "always",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": [
        "scripts/tsconfig.json",
        "packages/*/tsconfig.json"
      ]
    },
    "extends": "@ark120202/eslint-config/node",
    "rules": {
      "@typescript-eslint/no-unnecessary-condition": "off"
    }
  },
  "resolutions": {
    "**/typescript-to-lua/typescript": "^4.0.3"
  },
  "devDependencies": {
    "@ark120202/eslint-config": "^2.5.0",
    "@ark120202/typescript-config": "^2.2.0",
    "@types/fs-extra": "^9.0.2",
    "@types/htmlparser2": "^3.10.2",
    "@types/node": "^14.14.0",
    "eslint": "^7.11.0",
    "fs-extra": "^9.0.1",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "tslib": "^2.0.3",
    "typescript": "^4.0.3"
  }
}
