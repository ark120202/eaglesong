{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-s build:clean build:tsc",
    "build:clean": "rimraf packages/*/lib packages/*/tsconfig.tsbuildinfo",
    "build:tsc": "tsc -b packages",
    "dev": "tsc -b packages --watch",
    "lint": "run-p lint:prettier lint:eslint",
    "lint:eslint": "eslint . --ext .js,.ts",
    "lint:prettier": "prettier --check **/*.{ts,md,yml,json}",
    "prepublishOnly": "yarn build"
  },
  "prettier": {
    "printWidth": 100,
    "proseWrap": "always",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": "@ark120202/eslint-config/node",
    "parserOptions": {
      "project": [
        "tsconfig.json",
        "packages/create-custom-game/tsconfig.json",
        "packages/eaglesong/tsconfig.json",
        "packages/helper-service/tsconfig.json",
        "packages/helper-task/tsconfig.json",
        "packages/helper-tstl/tsconfig.json",
        "packages/service-localization/tsconfig.json",
        "packages/service-npc/tsconfig.json",
        "packages/task-addoninfo/tsconfig.json",
        "packages/task-eslint/tsconfig.json",
        "packages/task-images/tsconfig.json",
        "packages/task-localization/tsconfig.json",
        "packages/task-maps/tsconfig.json",
        "packages/task-npc/tsconfig.json",
        "packages/task-panorama/tsconfig.json",
        "packages/task-prettier/tsconfig.json",
        "packages/task-resources/tsconfig.json",
        "packages/task-root-scripts/tsconfig.json",
        "packages/task-sounds/tsconfig.json",
        "packages/task-vscripts/tsconfig.json",
        "packages/tasks/tsconfig.json"
      ]
    }
  },
  "devDependencies": {
    "@ark120202/eslint-config": "^2.0.0",
    "@ark120202/typescript-config": "^2.0.0",
    "@types/fs-extra": "^8.0.0",
    "@types/htmlparser2": "^3.10.1",
    "@types/node": "^12.7.5",
    "eslint": "^6.4.0",
    "fs-extra": "^8.1.0",
    "lerna": "^3.16.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-node": "^8.3.0",
    "tsc-pnp": "^0.1.0",
    "tslib": "^1.10.0",
    "typescript": "^3.6.3"
  },
  "resolutions": {
    "**/typescript": "3.6.3"
  },
  "installConfig": {
    "pnp": false
  }
}
